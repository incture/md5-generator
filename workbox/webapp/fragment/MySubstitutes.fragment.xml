<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" xmlns="sap.m">
	<HBox justifyContent="Start" renderType="Bare" alignItems="Center" class=" sapUiSizeCompact"
		visible="{= ${oUserSettingsModel>/selectedSubstitution} !== 'ImSubstituting'? true : false}">
		<Button icon="sap-icon://add" text="{i18n>ADD_NEW_TEXT}" class="wbCustomButtonClass wbTextBoldClass" press="addSubstitute('addSubs')"/>
	</HBox>
	<!--items="{oUserSettingsModel>/settings/substitutionSettings/mySubs/dtoList}"-->
	<!--	<List items="{oUserSettingsModel>/substitutionDto}" growing="true">-->
	<ScrollContainer vertical="true" horizontal="false" height="22rem">
		<VBox renderType="Bare" items="{oUserSettingsModel>/substitutionDto}">
			<CustomListItem class="sapUiTinyMarginBottom sapUiTinyMarginTop">
				<VBox>
					<HBox width="100%" height="auto">
						<HBox>
							<Label text="{oUserSettingsModel>substitutingUserName}" class="wbSubsUserName sapUiTinyMarginBegin"
								visible="{= ${oUserSettingsModel>/selectedSubstitution} !== 'ImSubstituting'? true : false}" width="200px"/>
							<Label text="{oUserSettingsModel>substitutedUserName}" class="wbSubsUserName sapUiTinyMarginBegin"
								visible="{= ${oUserSettingsModel>/selectedSubstitution} === 'ImSubstituting'? true : false}" width="200px"/>
							<Label
								text="{path: 'oUserSettingsModel>startDate', formatter: 'oneapp.incture.workbox.util.formatter.wbDateFormatter'} to {path: 'oUserSettingsModel>endDate', formatter: 'oneapp.incture.workbox.util.formatter.wbDateFormatter'}"
								class="wbSubsFromToDateText sapUiLargeMarginBegin"/>
						</HBox>
						<HBox renderType="Bare" alignItems="End" justifyContent="End" width="100%"
							visible="{= ${oUserSettingsModel>/selectedSubstitution} !== 'ImSubstituting'? true : false}">
							<Switch state="{oUserSettingsModel>active}" class="wbCustomSwitch sapUiTinyMarginEnd"
								visible="{= ${oUserSettingsModel>/selectedSubstitution} !== 'ImSubstituting'? true : false}" change="updateSubsBtnClick($event,'switch')"/>
							<Button tooltip="{i18n>EDIT_TEXT}" icon="sap-icon://edit" type="Transparent" class="wbTransparentButtonStyleClass sapUiTinyMarginEnd"
								press="updateSubsBtnClick($event,'edit')"/>
							<Button tooltip="{i18n>DELETE_TEXT}" icon="sap-icon://delete" type="Reject" class="wbInboxRemoveBtnClass" press="deleteSubstitution"/>
						</HBox>
					</HBox>
					<HeaderContainer scrollStep="200" content="{path:'oUserSettingsModel>processStatus'}" class="wbCustomHeaderCointainer">
						<Button text="{oUserSettingsModel>labelName}" class="wbSubsitutionProcessBtnRight sapUiTinyMarginBottom sapUiTinyMarginBegin"
							tooltip="{oUserSettingsModel>labelName}"
							visible='{parts:["oUserSettingsModel>status"], formatter:"oneapp.incture.workbox.util.formatter.wbsetSubstitutionClass"}'/>
					</HeaderContainer>
				</VBox>
			</CustomListItem>
			<!--	</List>-->
		</VBox>
	</ScrollContainer>
</core:FragmentDefinition>