<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
	<Dialog class="sapUiSizeCompact" contentWidth="80%">
		<customHeader>
			<Bar>
				<contentLeft>
					<Title text="{i18n>ADD_TEXT} {i18n>ATTRIBUTE_TEXT}"/>
				</contentLeft>
				<contentRight>
					<core:Icon src="sap-icon://decline" press="closeAddAttLayoutFragment" class="wbDialogCloseIcon" tooltip="{i18n>CLOSE_TEXT}"/>
				</contentRight>
			</Bar>
		</customHeader>
		<VBox renderType="Bare" alignItems="Center" visible="{= ${oAppModel>/currentViewPage} === 'taskDetailConfiguration'}">
			<IconTabBar class="wbAdminIconTabBackground">
				<items>
					<IconTabFilter text="{i18n>ADD_TEXT} {i18n>ATTRIBUTE_TEXT}">
						<VBox renderType="Bare" alignItems="Center" class="wbCustomContentWrapperStyle sapUiTinyMargin">
							<HBox width="98%" renderType="Bare" alignItems="Center" class="wbCustomHeaderClass" justifyContent="Start">
								<Text text="{i18n>LABEL_TEXT}" class="wbTransformToUpperCase sapUiLargeMarginBegin" width="18%"/>
								<Text text="{i18n>KEY_TEXT}" class="wbTransformToUpperCase" width="18%"/>
								<Text text="{i18n>DATA_TYPE_TEXT}" class="wbTransformToUpperCase" width="16%"/>
								<Text text="{i18n>VISIBILITY_TEXT}" class="wbTransformToUpperCase" width="16%"/>
								<Text text="{i18n>EDITABLE_TEXT}" class="wbTransformToUpperCase" width="16%"/>
								<Text text="{i18n>MANDATORY_TEXT}" class="wbTransformToUpperCase" width="16%"/>
							</HBox>
							<VBox class="sapUiSizeCompact" width="98%" renderType="Bare" alignItems="Center">
								<Tree width="100%" id="ID_ADD_ATTRIBUTE_LAYOUT_LIST" items="{oDefaultDataModel>/layoutCustomData}" mode="MultiSelect"
									selectionChange="checkSelectionFn">
									<CustomTreeItem
										selected='{parts:["oDefaultDataModel>key", "oDefaultDataModel>/selectedLayout/layoutAttributesData"], formatter:"oneapp.incture.workbox.util.formatter.wbSetSelectedAttList"}'>
										<HBox renderType="Bare" alignItems="Center" justifyContent="Start" height="auto" width="100%">
											<Input value="{oDefaultDataModel>keyLabel}" width="16.5%" maxLength="100" class="wbDefaultCustomInputWrapper" change="checkLabelDataFn"/>
											<Text text="{oDefaultDataModel>key}" width="18%" class="sapUiTinyMarginBegin" wrapping="true"/>
											<ComboBox selectedKey="{oDefaultDataModel>keyType}" class="wbDefaultCustomInputWrapper" items="{oDefaultDataModel>/dataType/dto}"
												width="15%" visible="{= !!${oDefaultDataModel>keyType}}">
												<core:Item key="{oDefaultDataModel>value}" text="{oDefaultDataModel>value}"
													enabled="{= ${oDefaultDataModel>value} === 'TABLE' || ${oDefaultDataModel>value} === 'ATTACHMENT' || ${oDefaultDataModel>value} === 'DROPDOWN' ? false : true}"/>
											</ComboBox>
											<HBox visible="{= ${oDefaultDataModel>isVisible} === false || ${oDefaultDataModel>isVisible} === true ? true : false}" renderType="Bare"
												alignItems="Center" width="16.5%" justifyContent="Start" class="sapUiTinyMarginBegin">
												<CheckBox selected="{oDefaultDataModel>isVisible}"/>
											</HBox>
											<HBox visible="{= ${oDefaultDataModel>isEditable} === false || ${oDefaultDataModel>isEditable} === true ? true : false}" renderType="Bare"
												alignItems="Center" width="16.25%" justifyContent="Start">
												<CheckBox selected="{oDefaultDataModel>isEditable}"/>
											</HBox>
											<HBox visible="{= ${oDefaultDataModel>isMandatory} === false || ${oDefaultDataModel>isMandatory} === true ? true : false}" renderType="Bare"
												alignItems="Center" width="16%" justifyContent="Start">
												<CheckBox selected="{oDefaultDataModel>isMandatory}"/>
											</HBox>
										</HBox>
									</CustomTreeItem>
								</Tree>
							</VBox>
						</VBox>
					</IconTabFilter>
					<IconTabFilter text="{i18n>ADD_TEXT} {i18n>NEW_TEXT} {i18n>ATTRIBUTE_TEXT}">
						<HBox renderType="Bare" alignItems="Center" justifyContent="End" class="sapUiTinyMargin">
							<Button text="{i18n>ADD_TEXT}" class="wbDefaultButtonClass sapUiSizeCompact" press="addExtraContextFn"/>
						</HBox>
						<VBox renderType="Bare" alignItems="Center" class="wbCustomContentWrapperStyle sapUiTinyMargin">
							<HBox width="98%" renderType="Bare" alignItems="Center" class="wbCustomHeaderClass" justifyContent="Start">
								<Text text="{i18n>LABEL_TEXT}" class="wbTransformToUpperCase sapUiMediumMarginBegin" width="16%"/>
								<Text text="{i18n>KEY_TEXT}" class="wbTransformToUpperCase" width="16%"/>
								<Text text="{i18n>DATA_TYPE_TEXT}" class="wbTransformToUpperCase" width="16%"/>
								<Text text="{i18n>VISIBILITY_TEXT}" class="wbTransformToUpperCase" width="16%"/>
								<Text text="{i18n>EDITABLE_TEXT}" class="wbTransformToUpperCase" width="16%"/>
								<Text text="{i18n>MANDATORY_TEXT}" class="wbTransformToUpperCase" width="16%"/>
							</HBox>
							<VBox class="sapUiSizeCompact" width="98%" renderType="Bare" alignItems="Center">
								<List id="ID_ADD_EXTRA_ATTRIBUTE_LAYOUT_LIST" items="{oDefaultDataModel>/extraLayoutCustomData}" class="sapUiSizeCompact wbInboxCardList"
									mode="MultiSelect">
									<CustomListItem class="wbCardViewList"
										selected='{parts:["oDefaultDataModel>key", "oDefaultDataModel>/selectedLayout/layoutAttributesData"], formatter:"oneapp.incture.workbox.util.formatter.wbSetSelectedAttList"}'>
										<HBox renderType="Bare" alignItems="Center" justifyContent="Start">
											<Input value="{oDefaultDataModel>keyLabel}" width="14.5%" maxLength="100" class="wbDefaultCustomInputWrapper" change="checkLabelDataFn"/>
											<Text text="{oDefaultDataModel>key}" width="17%" class="sapUiTinyMarginBegin"/>
											<ComboBox selectedKey="{oDefaultDataModel>keyType}" class="wbDefaultCustomInputWrapper" items="{oDefaultDataModel>/dataType/dto}"
												width="15%">
												<core:Item key="{oDefaultDataModel>value}" text="{oDefaultDataModel>value}"
													enabled="{= ${oDefaultDataModel>value} === 'TABLE' || ${oDefaultDataModel>value} === 'ATTACHMENT' || ${oDefaultDataModel>value} === 'DROPDOWN' ? false : true}"/>
											</ComboBox>
											<HBox renderType="Bare" alignItems="Center" width="16.5%" justifyContent="Start" class="sapUiTinyMarginBegin">
												<CheckBox selected="{oDefaultDataModel>isVisible}"/>
											</HBox>
											<HBox renderType="Bare" alignItems="Center" width="16.25%" justifyContent="Start">
												<CheckBox selected="{oDefaultDataModel>isEditable}"/>
											</HBox>
											<HBox renderType="Bare" alignItems="Center" width="16%" justifyContent="Start">
												<CheckBox selected="{oDefaultDataModel>isMandatory}"/>
											</HBox>
										</HBox>
									</CustomListItem>
								</List>
							</VBox>
						</VBox>
					</IconTabFilter>
				</items>
			</IconTabBar>
			<HBox renderType="Bare" alignItems="Center" width="98%" justifyContent="End" class="sapUiTinyMarginTop sapUiTinyMarginBottom">
				<Button text="{i18n>SUBMIT_TEXT}" class="wbDefaultButtonClass" press="addAttributestoLayoutFn"/>
			</HBox>
		</VBox>
		<VBox renderType="Bare" alignItems="Center" visible="{= ${oAppModel>/currentViewPage} === 'createWorkFlow'}">
			<IconTabBar class="wbAdminIconTabBackground">
				<items>
					<IconTabFilter text="{i18n>ADD_EXISTING_ATTRIBUTES_TEXT}">
						<VBox renderType="Bare" alignItems="Center" class="wbCustomContentWrapperStyle sapUiTinyMargin">
							<HBox width="98%" renderType="Bare" alignItems="Center" class="wbCustomHeaderClass" justifyContent="Start">
								<Text text="{i18n>LABEL_TEXT}" class="wbTransformToUpperCase sapUiLargeMarginBegin wbAddAttrLayoutPadding" width="22.6%"/>
								<!--<Text text="{i18n>KEY_TEXT}" class="wbTransformToUpperCase" width="16%"/>-->
								<Text text="{i18n>DATA_TYPE_TEXT}" class="wbTransformToUpperCase sapUiSmallMarginBegin" width="23%"/>
								<Text text="{i18n>VISIBILITY_TEXT}" class="wbTransformToUpperCase sapUiTinyMarginBegin" width="19%"/>
								<Text text="{i18n>EDITABLE_TEXT}" class="wbTransformToUpperCase" width="17%"/>
								<Text text="{i18n>MANDATORY_TEXT}" class="wbTransformToUpperCase sapUiTinyMarginBegin" width="16%"/>
							</HBox>
							<VBox class="sapUiSizeCompact" width="98%" renderType="Bare" alignItems="Center">
								<Tree width="100%" id="ID_ADD_ATTRIBUTE_LAYOUT_LIST_WF" items="{oDefaultDataModel>/layoutCustomData}" mode="MultiSelect"
									selectionChange="checkSelectionFn" class="sapUiSizeCompact wbPreviewTreePadding wbInboxCardList">
									<CustomTreeItem
										selected='{parts:["oDefaultDataModel>key", "oDefaultDataModel>/selectedLayout/layoutAttributesData"], formatter:"oneapp.incture.workbox.util.formatter.wbSetSelectedAttList"}'>
										<HBox renderType="Bare" alignItems="Center" justifyContent="Start" height="auto" width="100%">
											<Input value="{oDefaultDataModel>keyLabel}" width="{= ${oDefaultDataModel>keyType} ? '20%' : '18%'}" maxLength="100"
												class="wbDefaultCustomInputWrapper" change="checkLabelDataFn"/>
											<!--<Text text="{oDefaultDataModel>key}" width="17%" class="sapUiSmallMarginBegin" wrapping="true"/>-->
											<ComboBox selectedKey="{oDefaultDataModel>keyType}" class="wbDefaultCustomInputWrapper sapUiLargeMarginBegin"
												items="{oDefaultDataModel>/dataType/dto}" width="20%" visible="{= ${oDefaultDataModel>keyType} ? true : false}">
												<core:Item key="{oDefaultDataModel>value}" text="{oDefaultDataModel>value}"
													enabled="{= ${oDefaultDataModel>value} === 'TABLE' ? false : true}"/>
											</ComboBox>
											<HBox visible="{= ${oDefaultDataModel>isVisible} === false || ${oDefaultDataModel>isVisible} === true ? true : false}" renderType="Bare"
												alignItems="Center" width="16%" justifyContent="Start" class="sapUiLargeMarginBegin">
												<CheckBox selected="{oDefaultDataModel>isVisible}"/>
											</HBox>
											<HBox visible="{= ${oDefaultDataModel>isEditable} === false || ${oDefaultDataModel>isEditable} === true ? true : false}" renderType="Bare"
												alignItems="Center" width="18%" justifyContent="Start" class="sapUiLargeMarginBegin">
												<CheckBox selected="{oDefaultDataModel>isEditable}"/>
											</HBox>
											<HBox visible="{= ${oDefaultDataModel>isMandatory} === false || ${oDefaultDataModel>isMandatory} === true ? true : false}" renderType="Bare"
												alignItems="Center" width="19.2%" justifyContent="Start" class="sapUiTinyMarginBegin">
												<CheckBox selected="{oDefaultDataModel>isMandatory}"/>
											</HBox>
										</HBox>
									</CustomTreeItem>
								</Tree>
							</VBox>
						</VBox>
					</IconTabFilter>
					<IconTabFilter text="{i18n>ADD_TEXT} {i18n>NEW_TEXT} {i18n>ATTRIBUTES_TEXT}">
						<HBox renderType="Bare" alignItems="Center" justifyContent="End" class="sapUiTinyMargin">
							<Button text="{i18n>ADD_TEXT}" class="wbDefaultButtonClass sapUiSizeCompact" press="addExtraContextFnWF"/>
						</HBox>
						<VBox renderType="Bare" alignItems="Center" class="wbCustomContentWrapperStyle sapUiTinyMargin">
							<HBox width="98%" renderType="Bare" alignItems="Center" class="wbCustomHeaderClass" justifyContent="Start">
								<Text text="{i18n>LABEL_TEXT}" class="wbTransformToUpperCase sapUiLargeMarginBegin wbAddAttrLayoutPadding" width="22.6%"/>
								<!--<Text text="{i18n>KEY_TEXT}" class="wbTransformToUpperCase" width="16%"/>-->
								<Text text="{i18n>DATA_TYPE_TEXT}" class="wbTransformToUpperCase sapUiSmallMarginBegin" width="23%"/>
								<Text text="{i18n>VISIBILITY_TEXT}" class="wbTransformToUpperCase sapUiTinyMarginBegin" width="19%"/>
								<Text text="{i18n>EDITABLE_TEXT}" class="wbTransformToUpperCase" width="17%"/>
								<Text text="{i18n>MANDATORY_TEXT}" class="wbTransformToUpperCase sapUiTinyMarginBegin" width="16%"/>
							</HBox>
							<VBox class="sapUiSizeCompact" width="98%" renderType="Bare" alignItems="Center">
								<Tree id="ID_ADD_EXTRA_ATTRIBUTE_LAYOUT_LIST_WF" items="{oDefaultDataModel>/extraLayoutCustomData}"
									class="sapUiSizeCompact wbPreviewTreePadding wbInboxCardList" mode="MultiSelect" selectionChange="selectNewAtrrToLayout">
									<CustomTreeItem
										selected='{parts:["oDefaultDataModel>key", "oDefaultDataModel>/selectedLayout/selectedLayoutAttributes"], formatter:"oneapp.incture.workbox.util.formatter.wbSetSelectedAttList"}'>
										<HBox renderType="Bare" alignItems="Center" justifyContent="Start" height="auto" width="100%">
											<Input value="{oDefaultDataModel>keyLabel}" width="{= ${oDefaultDataModel>keyType} ? '20%' : '18%'}" maxLength="100"
												class="wbDefaultCustomInputWrapper" change="checkLabelDataFn"/>
											<!--<Text text="{oDefaultDataModel>key}" width="17%" class="sapUiTinyMarginBegin"/>-->
											<ComboBox selectedKey="{oDefaultDataModel>keyType}" class="wbDefaultCustomInputWrapper sapUiLargeMarginBegin"
												items="{oDefaultDataModel>/dataType/dto}" width="20%" change="addRowOnDropDown" visible="{= ${oDefaultDataModel>keyType} ? true : false}">
												<core:Item key="{oDefaultDataModel>value}" text="{oDefaultDataModel>value}"
													enabled="{= ${oDefaultDataModel>value} === 'TABLE' ? false : true}"/>
											</ComboBox>
											<HBox renderType="Bare" alignItems="Center" width="16%" justifyContent="Start" class="sapUiLargeMarginBegin"
												visible="{= ${oDefaultDataModel>isVisible} === false || ${oDefaultDataModel>isVisible} === true ? true : false}">
												<CheckBox selected="{oDefaultDataModel>isVisible}"/>
											</HBox>
											<HBox renderType="Bare" alignItems="Center" width="18%" justifyContent="Start" class="sapUiLargeMarginBegin"
												visible="{= ${oDefaultDataModel>isEditable} === false || ${oDefaultDataModel>isEditable} === true ? true : false}">
												<CheckBox selected="{oDefaultDataModel>isEditable}"/>
											</HBox>
											<HBox renderType="Bare" alignItems="Center" width="19.2%" justifyContent="SpaceBetween" class="sapUiTinyMarginBegin"
												visible="{= ${oDefaultDataModel>isMandatory} === false || ${oDefaultDataModel>isMandatory} === true ? true : false}">
												<CheckBox selected="{oDefaultDataModel>isMandatory}"/>
												<Button text="{i18n>ADD_TEXT}" class="wbDefaultButtonClass sapUiSizeCompact" press="addNewDropDownRows"
													visible="{= ${oDefaultDataModel>keyType} === 'DROPDOWN' ? true:false}"/>
											</HBox>
										</HBox>
									</CustomTreeItem>
								</Tree>
							</VBox>
						</VBox>
					</IconTabFilter>
				</items>
			</IconTabBar>
			<HBox renderType="Bare" alignItems="Center" width="98%" justifyContent="End" class="sapUiTinyMarginTop sapUiTinyMarginBottom">
				<Button text="{i18n>SUBMIT_TEXT}" class="wbDefaultButtonClass" press="addAttributestoLayoutFnWF"/>
			</HBox>
		</VBox>
	</Dialog>
</core:FragmentDefinition>